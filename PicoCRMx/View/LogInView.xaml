<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PicoCRMx.View.LogInView"
             xmlns:local="clr-namespace:PicoCRMx"
             xmlns:viewmodel="clr-namespace:PicoCRMx.Objects.ViewModel"
             x:DataType="viewmodel:AuthViewModel"
             Title="LogInView">
    <VerticalStackLayout>
        <Entry 
            Text="{Binding Username}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Command="{Binding DoLogInCommand}" Text="LogIn" />
    </VerticalStackLayout>
</ContentPage>